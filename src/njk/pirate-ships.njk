{% extends '_templates/base.njk' %}

{% block content %}
<article class="container">
  <h1>Ships of the Golden Age of Pirates</h1>
  <p>Learn more about your favorite pirate and their ship!</p>
  <div class="row">
    {% for ship in pirates.ships %}
  <div class="col-sm-6 mb-4 col-lg-4">
    <div class="card bg-success bg-gradient bg-opacity-25">
      <div class="card-body">
        <h5 class="card-title">{{ship.ship_name}}</h5>
        <h6 class= "card-captain"> {{ship.captain}}</h6>
        <p class="card-text">{{ship.blurb}}</p>
        <a href="{{ ship.source }}" target="blank">Source</a>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
</article>
{% endblock %}